<% layout('../ui.layout') -%>
<section class="hero">
  <div class="hero-body">
    <div class="container">

      <div class="columns has-text-right">
        <div class="column">

          <a href="/articles/posts/new" class="button is-warning">
            <span class="icon">
              <i class="fas fa-plus-square"></i>
            </span>
            <span>Novo</span>
          </a>

          <button class="button">
            <span class="icon">
              <i class="fas fa-filter"></i>
            </span>
            <span>Filtrar</span>
          </button>

        </div>
      </div>

      <hr class="mt-0 mb-3">

      <div class="columns">
        <div class="column">
          <div class="box is-size-6"> <i class="fas fa-sync-alt fa-spin mr-2"></i> Carregando...</div>
        </div>
      </div>

      <div class="columns">
        <div class="column">
          <div class="notification">

            <div class="mb-2"><i class="fas fa-exclamation-circle mr-1"></i> Nenhum item encontrado.</div>

            <button class="button is-rounded is-small">
              <span class="icon">
                <i class="fas fa-sync-alt"></i>
              </span>
              <span>
                Tentar Novamente
              </span>
            </button>

            <button class="button is-rounded is-small">
              <span class="icon">
                <i class="fas fa-filter"></i>
              </span>
              <span>
                Remover filtros
              </span>
            </button>

          </div>
        </div>
      </div>


      <div class="columns is-flex-wrap-wrap">
        <% for (let n = 0; n < 12; n++) { %>
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-image">
              <figure class="image is-2by1 has-background-grey-light">
                <!-- <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image"> -->
              </figure>
            </div>
            <div class="card-content">

              <div class="content is-size-7">
                <div>
                 <strong class="has-text-success">Publicado</strong>
                </div>
                <div class="title is-size-6 mb-1">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                  Phasellus nec iaculis mauris. <a>@bulmaio</a>.
                </div>
              </div>
              <div class="has-text-grey-light is-size-7">
                <span><i class="fas fa-user mr-1"></i><span>John Smith</span></span>
              </div>
              <div class="has-text-grey-light is-size-7">
                <i class="fas fa-clock mr-1"></i> <span>11:09 PM - 1 Jan 2016</span>
              </div>
            </div>
            <footer class="card-footer">
              <a href="#" class="card-footer-item has-text-danger"><i class="fa fa-lock mr-1"></i> Editar</a>
            </footer>
          </div>
        </div>
        <% } %>

      </div>


      <nav class="pagination" role="navigation" aria-label="pagination">
        <a href="javascript:void(0);" class="pagination-previous"><i class="fas fa-arrow-left mr-1"></i>Anterior</a>
        <a href="javascript:void(0);" class="pagination-next">Pr√≥xima <i class="fas fa-arrow-right ml-1"></i></a>
      </nav>

    </div>
  </div>
</section>
