<% layout('../ui.layout') -%>

<section data-vue="post-editor" v-cloak>

  <div class="hero">
     <div class="hero-body">

      <div class="container">
        <div class="columns">
          <div class="column">
            <div class="box is-size-6"> <i class="fas fa-sync-alt fa-spin mr-2"></i> Carregando...</div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="columns">
          <div class="column">
            <div class="notification">
              Nenhum item encontrado.
              <button class="button is-rounded is-small">
                <span class="icon">
                  <i class="fas fa-sync-alt"></i>
                </span>
                <span>
                  Tentar Novamente
                </span>
              </button>
            </div>
          </div>
        </div>
      </div>


    
      <div class="container">
        <div class="columns">
          <div class="column is-9">

            <div class="mb-3">
              <button class="button is-small is-success"><i class="fa fa-save mr-1"></i> Salvar e sair</button>
              <button class="button is-small is-info"><i class="fa fa-pen-square mr-1"></i> Salvar e continuar editando</button>
              <button class="button is-small is-danger is-light"><i class="fa fa-times mr-1"></i> Cancelar Edição</button>
            </div>


            <div class="notification is-small notification-warning p-2">
              <div class="mb-2">
                <div class="is-size-7"><i class="fa fa-exclamation-circle"></i> Você esta editando uma cópia de segurança</div>
                <p class="is-size-7">
                  Essa é uma versão salva automáticamente no seu navegador. <strong>Deseja descartar a cópia de segurança?</strong>
                </p>
              </div>
              <button class="button is-small is-success"><i class="fa fa-check mr-1"></i> Manter e continuar editando</button>
              <button class="button is-small is-info"><i class="fa fa-times mr-1"></i> Editar versão original</button>
            </div>

            <div class="box">

              <div class="field">
                <div class="is-size-7 m-1">
                  <a href="javascript:void(0);"><span>/posts/category-slug/article-slug</span><i class="fas fa-edit ml-1"></i></a>
                </div>
                <div class="control has-icons-left">
                  <span class="icon is-medium is-left">
                    <i class="fas fa-heading"></i>
                  </span>
                  <input class="input" type="text" minlength="6" placeholder="Headline">
                </div>
              </div>

              <div class="field">
                <div class="control is-small has-icons-left">
                  <input class="input is-small" type="text" minlength="6" placeholder="SEO Headline">
                  <span class="icon is-small is-left">
                    <i class="fas fa-heading"></i>
                  </span>
                </div>
              </div>

              <div class="field">
                <div class="control is-small has-icons-left">
                  <input class="input is-small" type="text" minlength="6" placeholder="SEO Headline">
                  <span class="icon is-small is-left">
                    <i class="fas fa-heading"></i>
                  </span>
                </div>
              </div>

              <div class="field">
                <div class="control is-small">
                  <textarea class="textarea is-small has-fixed-size" rows="2" placeholder="Descrição curta" maxlength="120"></textarea>
                </div>
                <small class="is-size-7 has-text-grey">
                  <i class="fa fa-keyboard mr-1"></i> <span><span>0</span>/120 caracteres.</span>
                </small>

              </div>
              <ckeditor :editor="editor" v-model="editorData" :config="editorConfig"></ckeditor>
            </div>


            <div>
              <button class="button"><i class="fa fa-user-edit mr-2"></i> Edições avançadas de SEO</button>
            </div>
          </div>

          <div class="column is-3">
            <div class="mb-3">
              <input-image :placeholder="'Imagem de capa'"></input-image>
            </div>
            <hr>

            <div class="select mb-3">
              <select>
                <option>Rascunho</option>
                <option>Publicado</option>
              </select>
            </div>

            <hr>

            <div class="field mb-3">
              <div class="control">
                <input class="input" type="datetime-local" minlength="6" placeholder="Headline">
              </div>
            </div>

            <hr>

            <div class="mb-3">             
              <div class="select">
                <select>
                  <option>Sem Categoria</option>
                  <option>Categoria A</option>
                  <option>Categoria B</option>
                  <option>Categoria C</option>
                  <option>Categoria D</option>
                  <option>Categoria E</option>
                </select>
              </div>
              <a href="javascript:void(0);" class="is-size-7">Editar categorias<i class="fa fa-edit ml-1"></i></a>
            </div>

            <hr>

            <div class="notification p-2" class="mb-3">
              <span class="tag is-info">
                <span class="mr-1">Tag A</span>
                <button class="delete is-small"></button>
              </span>
              <span class="tag is-info">
                <span class="mr-1">Lorem ipsum, dolor sit amet.</span>
                <button class="delete is-small"></button>
              </span>
              <span class="tag is-info">
                <span class="mr-1">Lorem, ipsum.</span>
                <button class="delete is-small"></button>
              </span>
              <span class="tag is-info">
                <span class="mr-1">Lorem ipsum, dolor.</span>
                <button class="delete is-small"></button>
              </span>
              <span class="tag is-info">
                <span class="mr-1">Tag A</span>
                <button class="delete is-small"></button>
              </span>
              <span class="tag is-info">
                <span class="mr-1">Lorem.</span>
                <button class="delete is-small"></button>
              </span>
              <span class="tag is-info">
                <span class="mr-1">blastoise</span>
                <button class="delete is-small"></button>
              </span>
            </div>

            <div class="field">
              <div class="control has-icons-left">
                <span class="icon is-medium is-left">
                  <i class="fas fa-tag"></i>
                </span>
                <input class="input" type="text" minlength="6" placeholder="Inserir Tag">
              </div>
              <div>
                <small class="is-size-7 has-text-grey">
                  <i class="fa fa-keyboard mr-1"></i> <span>Use [enter] ou [,] para inserir.</span>
                </small>
              </div>
            </div>

          </div>
        </div>
      </div>
       
     </div>
   </div> 

</section>
